<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
                name="viewmodel"
                type="com.dwaik.weathercheck.viewmodel.SelectedCityViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:padding="@dimen/generic_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                tools:text="Stockholm, SE"
                android:text="@{viewmodel.selectedCity.toString()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_city"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.07999998"/>
        <TextView
                android:text="@string/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_temp"
                app:layout_constraintStart_toStartOf="@+id/tv_city"
                app:layout_constraintTop_toBottomOf="@+id/tv_city"
                android:layout_marginTop="16dp"/>
        <TextView
                android:text="@string/pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_pressure"
                app:layout_constraintStart_toStartOf="@+id/tv_temp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_temp"/>
        <TextView
                android:text="@string/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_humidity"
                app:layout_constraintStart_toStartOf="@+id/tv_pressure"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_pressure"/>
        <TextView
                android:text="@string/wind_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_wind_speed"
                app:layout_constraintStart_toStartOf="@+id/tv_humidity"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_humidity"/>
        <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/iv_icon"
                android:scaleType="centerCrop"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:weatherImage='@{viewmodel.selectedCity.weather !=null ? viewmodel.selectedCity.weather[0].icon:""}'
                app:layout_constraintBottom_toBottomOf="@+id/tv_city"
                app:layout_constraintTop_toTopOf="@+id/tv_city"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.9"/>

        <TextView
                android:text="@{viewmodel.selectedCity.main.temp}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_tmp_value"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@+id/iv_icon"
                app:layout_constraintTop_toBottomOf="@+id/tv_city"/>

        <TextView
                android:text="@{viewmodel.selectedCity.main.pressure}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_pressure_value"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_tmp_value"
                app:layout_constraintEnd_toEndOf="@+id/tv_tmp_value"/>
        <TextView
                android:text="@{viewmodel.selectedCity.main.humidity}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_humidity_value"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_pressure_value"
                app:layout_constraintEnd_toEndOf="@+id/tv_pressure_value"/>
        <TextView
                android:text="@{viewmodel.selectedCity.wind.speed}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_wind_speed_value"
                app:layout_constraintEnd_toEndOf="@+id/tv_humidity_value"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_humidity_value"/>
        <Button
                android:text="@string/btn_change_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_change_city"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="1.0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
